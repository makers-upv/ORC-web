---
import Button from "./button.astro";
interface Props {
  title: string;
  button: string;
}

const { title, button } = Astro.props;
---

<div class="btn">
  <div class="container">
    <h3>{title}</h3>
    <p>
      <slot />
    </p>
    <Button button={button} />
  </div>
</div>
<style>
  .btn {
    margin: 1rem;
    border-radius: 25px;
    background: #e0e0e0;
    width: 100%;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 20vw;
    width: auto;
    height: 80%;
    margin: 2rem;
    justify-content: space-between;
  }

  .container p {
    margin: 10px 0 10px 0;
    text-align: left;
  }

  .container h3 {
    font-weight: 400;
    color: var(--color1);
  }

