---
import { Image } from "astro:assets";
import OrcImg from "../assets/ORC.png";
import Button from "./button.astro";
---

<div class="nav">
  <a class="logo" href="/">
    <Image
      src={OrcImg}
      alt="A bird sitting on a nest of eggs."
      style="width: 5rem; height: auto;"
    /></a
  >

  <nav class="nav-links">
    <div class="links">
      <a href="/talleres" class="nav-button">Talleres</a>
      <a href="/pruebas" class="nav-button">Pruebas</a>
      <a href="/normativa" class="nav-button">Normativa</a>
      <!-- <a
        class="form-button"
        href="https://www.thecontesthub.com/es/contests/olympic-robotic-challenge-orc"
        target="_blank">Apúntate</a
      > -->
      <!-- <div style="width: 100%;"> -->
      <Button button="Apúntate" />
      <!-- </div> -->
    </div>
  </nav>
  <div class="container">
    <input type="checkbox" id="checkbox1" class="checkbox1 visuallyHidden" />
    <label for="checkbox1">
      <div class="hamburger hamburger1">
        <span class="bar bar1"></span>
        <span class="bar bar2"></span>
        <span class="bar bar3"></span>
        <span class="bar bar4"></span>
      </div>
    </label>
  </div>
</div>
<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    // var nav = document.querySelector(".nav");

    // window.addEventListener("scroll", function () {
    //   if (window.scrollY > window.innerHeight * 0.9) {
    //     // Adjust the scroll value as needed
    //     nav.classList.add("scrolled");
    //   } else {
    //     nav.classList.remove ("scrolled");
    //   }
    // });
    const checkbox = document.getElementById("checkbox1");
    const navLinks = document.querySelector(".nav-links");

    checkbox.addEventListener("change", () => {
      if (checkbox.checked) {
        navLinks.classList.add("opened");
      } else {
        navLinks.classList.remove("opened");
      }
    });
  });
</script>
<style>
  /* STYLES for burguer menu */
  .visuallyHidden {
    position: absolute;
    overflow: hidden;
    clip: rect(0 0 0 0);
    height: 1px;
    width: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
  }
  .container {
    padding: 20px;
    justify-content: space-between;
  }
  @media screen and (min-width: 780px) {
    .container {
      display: none;
    }
    .nav-links {
      display: flex;
    }
  }

  .hamburger {
    margin: 0 auto;
    width: 30px;
    height: 30px;
    position: relative;
  }

  .hamburger .bar {
    padding: 0;
    width: 30px;
    height: 4px;
    background-color: var(--colorMakers);
    display: block;
    border-radius: 4px;
    transition: all 0.3s ease-in-out;
    position: absolute;
  }

  .bar1 {
    top: 0;
  }

  .bar2,
  .bar3 {
    top: 13.5px;
  }

  .bar3 {
    right: 0;
  }

  .bar4 {
    bottom: 0;
  }

  /* HAMBURGER 1 */
  .checkbox1:checked + label > .hamburger1 > .bar1 {
    transform: rotate(45deg);
    transform-origin: 5%;
    width: 41px;
  }

  .checkbox1:checked + label > .hamburger1 > .bar2 {
    transform: translateX(-40px);
    background-color: transparent;
  }

  .checkbox1:checked + label > .hamburger1 > .bar3 {
    transform: translateX(40px);
    background-color: transparent;
  }

  .checkbox1:checked + label > .hamburger1 > .bar4 {
    transform-origin: 5%;
    transform: rotate(-45deg);
    width: 41px;
  }
  /* burguer menu  end*/
</style>
<style>
  .logo {
    display: flex;
    align-items: center;
  }

  .nav {
    display: flex;
    padding: 2% 6%;
    justify-content: space-between;
    align-items: center;
    background-color: var(--background-600);
    position: sticky;
    top: 0;
    z-index: 100;
    height: 10vh;
    /* overflow-x: hidden; */
    border-radius: 0px;
    box-shadow: 5px 5px 10px #5a5a5a;
    /* -5px -5px 10px #ffffff; */
  }

  @media screen and (max-width: 780px) {
    .nav-links {
      position: absolute;
      top: 10vh;
      width: 0;
      display: none;
      height: 90vh;
      transition: 0.3s;
      padding: 5% 2%;
      /* right: -100%; */
      background: #202020c0;
    }
    .links {
      display: flex;
      flex-direction: column;
      position: absolute;
    }
    .opened {
      right: -1px;
      width: 101vw;
      display: block;
      height: 91vh;
    }
    .form-button {
      margin-top: 5rem;
      /* margin-left: 1rem !important; */
    }
  }

  .nav-links {
    justify-content: space-evenly;
    padding-left: 20%;
  }

  .nav-links a {
    cursor: pointer;
    font-size: 16px;
    border-radius: 20px;
    padding: 8px 20px;
    transition: 0.3s;
  }

  .nav-button {
    color: var(--fontColor2);
  }

  .nav-button:hover {
    background-color: #cecece52;
  }
  .form-button {
    border: 1.5px solid var(--fontColor2);
    color: var(--fontColor2);
    margin-left: 2rem;
  }
  .form-button:hover {
    background-color: var(--colorMakers);
    color: var(--fontColor1);
  }
</style>
